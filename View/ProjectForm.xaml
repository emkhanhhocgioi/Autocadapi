<Window x:Class="test.View.ProjectForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:test.View"
             Title="Chọn dự án"
             mc:Ignorable="d" 
             Height="380"
             Width="500"
             MinWidth="450"
             MinHeight="350">     
    <Grid Background="White">
       
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition  Width="7*"/>
        </Grid.ColumnDefinitions>
          
        
        <!-- label title -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Dự án :" Foreground="Black" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <TextBlock Grid.Row="1" Text="Tháp :" Foreground="Black" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <TextBlock Grid.Row="2" Text="Tầng :" Foreground="Black" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <TextBlock Grid.Row="3" Text="Hệ :" Foreground="Black" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Left"/>
           
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <ComboBox Grid.Row="0" 
          ItemsSource="{Binding ProjectCollection}" 
          SelectedItem="{Binding SelectedProject}"
          DisplayMemberPath="projectName"
          Height="Auto" 
          Background="White" 
          Margin="5" 
          SelectedIndex="0"/>

            <!-- ComboBox Tháp -->
            <ComboBox Grid.Row="1" 
          ItemsSource="{Binding SelectedProject.towers}" 
          DisplayMemberPath="towerName"
          Height="Auto" 
          Background="White" 
          Margin="5" 
          SelectedIndex="0"/>

            <!-- ComboBox Tầng -->
            <ComboBox Grid.Row="2" 
          ItemsSource="{Binding SelectedProject.floors}" 
          DisplayMemberPath="floorName"
          Height="Auto" 
          Background="White" 
          Margin="5" 
          SelectedIndex="0"/>

            <!-- ComboBox Hệ -->
            <ComboBox Grid.Row="3" 
          ItemsSource="{Binding SelectedProject.units}" 
          DisplayMemberPath="unitName"
          Height="Auto" 
          Background="White" 
          Margin="5" 
          SelectedIndex="0"/>

            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>


                <Button Grid.Column="0" Content="OK" Height="40" Width="200" Margin="5" FontSize="16" FontWeight="Bold" Foreground="White" Background="LightBlue" HorizontalAlignment="Center"/>
                <Button Grid.Column="1" Content="Thoát" Height="40" Width="200" Margin="5" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
            </Grid>

        </Grid>

    </Grid>
</Window>
