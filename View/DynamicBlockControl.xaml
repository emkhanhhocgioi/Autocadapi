<UserControl x:Class="test.View.DynamicBlockControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:test.View"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="400">
    <Grid Background="White">
        <TabControl Margin="5">
            <TabItem Header="Block Info">
                <StackPanel Margin="20">
                    <TextBlock Text="Parameters"
                               FontSize="14"
                               FontWeight="Bold"/>

                    <!-- Hiển thị PropName : Value -->
                    <ItemsControl ItemsSource="{Binding DynamicBlockProperties}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="{Binding PropertyName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                               Width="100"/>
                                    <TextBlock Text=": " />
                                    <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                             Width="120"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Nút nằm dưới cùng, căn trái -->
                    <Button Content="Get BlockProp"
                            Command="{Binding GetBlockPropCommand}"
                            Width="140"
                            Height="30"
                            Margin="0,15,0,0"
                            HorizontalAlignment="Left"/>

                    <Button Content="Set BlockProp"
                            Command="{Binding SetBlockPropCommand}"
                            Width="140"
                            Height="30"
                            Margin="0,15,0,0"
                            HorizontalAlignment="Left"/>
                </StackPanel>
            </TabItem>

            <TabItem Header="Stretch">
                <Grid>
                    <!-- Đặt ParameterEdit trong Grid để hiển thị đầy đủ -->
                    <local:ParameterEdit Margin="10"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>